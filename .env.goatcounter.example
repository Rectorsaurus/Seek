# GoatCounter Configuration
# Copy this file to .env.local and fill in your values

# Development Settings
GOATCOUNTER_DOMAIN=localhost:8080
GOATCOUNTER_DB_PASSWORD=goatcounter_dev_password

# Production Settings (uncomment for production)
# GOATCOUNTER_DOMAIN=your-domain.com
# GOATCOUNTER_DB_PASSWORD=your_secure_password_here

# GoatCounter API Configuration
GOATCOUNTER_API_KEY=your_api_key_here
GOATCOUNTER_API_URL=http://localhost:8080/api

# Site Configuration
GOATCOUNTER_SITE_CODE=seek-tobacco
GOATCOUNTER_ALLOW_LOCALHOST=true